# ============================================================================
# SOP Inventory Production Environment
# ============================================================================
# Copy file ini sebagai .env di VPS production server
# cp .env.production.example .env

# Application Settings
APP_NAME="SOP Inventory System"
APP_ENV=production
APP_KEY=  # Generate dengan: php artisan key:generate
APP_DEBUG=false
APP_TIMEZONE=Asia/Jakarta

# Production URL - HTTPS WAJIB!
APP_URL=https://app.indra-casa.my.id
ASSET_URL=https://app.indra-casa.my.id

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file

# Logging
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
# Gunakan master database dari docker network "jaringan-pusat"
DB_CONNECTION=mysql
DB_HOST=master-db  # Hostname container MySQL di jaringan pusat
DB_PORT=3306
DB_DATABASE=sae_inventory
DB_USERNAME=indra
DB_PASSWORD=your_secure_password_here

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.indra-casa.my.id

CACHE_STORE=database
CACHE_PREFIX=sop_

# Queue
QUEUE_CONNECTION=database

# Mail Configuration (Opsional)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@indra-casa.my.id"
MAIL_FROM_NAME="${APP_NAME}"

# Security
BCRYPT_ROUNDS=12

# Vite
VITE_APP_NAME="${APP_NAME}"
